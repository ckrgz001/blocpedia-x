<h1><%= @wiki.title %></h1>
 
 <div class="row">
   <div class="col-md-8">

    <tr class="tablehead">
      <td><small>created by: <%= link_to @wiki.user.username, user_path(@wiki.user)%></small></td>
   </tr>
     <p><%= @wiki.body %></p>
   </div>
   <div class="col-md-4">

    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-warning btn-que' %>
    <%= link_to "Delete Wiki", wiki_path(@wiki), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
    <%= link_to "Back to Index", wikis_path, class: 'btn btn-info' %>
  
   </div>
 </div>