<h1>All Public Wikis</h1>
<p>
  <%= link_to "Create new wiki", new_wiki_path, class: 'btn btn-success' %>
</p>
<div align="center">
  <%= will_paginate @wikis%>
</div>
<div class="col-xs-10 col-xs-offset-1 tabletop">
<table class="wikitable" id="one">
  <tr class="tablehead">
    <th>Wiki</th>
    <th>Creator</th>
    <th>Actions</th>
  </tr>
   
 <% @wikis.each do |x| %>
    <tr class="tablehead">
      <td>- <%= link_to x.title, wiki_path(x.id) %></td>
      <td><%= link_to x.user.username, user_path(x.user) if x.user %></td>
      <td><%= link_to 'Edit', edit_wiki_path(x.id), class: 'btn btn-warning' %> | <%= link_to "Delete", wiki_path(x.id), method: :delete, 
      class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
    </tr>
 <% end %>
 </table>
 </div>

<div align="center">
  <%= will_paginate @wikis%>
</div>
